<h1>ブログ一覧</h1>
<div class="container">

    <div id="new-blog-link">
      <%= link_to '新規ブログを作成する', new_blog_path,class: 'btn btn-primary' %>
  </div>
<div class="row">
<% @blogs.each do |blog| %>
  <div class="col-xs-12 col-md-6 blog-panel">
    <h3><%= blog.user.name %> </h3>
    <h2><%= blog.title %></h2>
    <p><%= blog.content %></p>
      <div class="blog-links">
        <% if current_user.present? %>
          <%= link_to '詳細を確認する',blog_path(blog.id),class: 'btn btn-default' %>
          <% if current_user.id  ==  blog.user_id %>
            <%= link_to "ブログを編集する", edit_blog_path(blog.id), class: 'btn btn-info'%>
            <%= link_to'ブログを削除する',blog_path(blog.id),method: :delete ,data: {confirm: '本当に削除してもいいですか？'},class: 'btn btn-danger' %>
          <% end %>
        <% end %>
      </div>
  </div>
  <% end %>
 </div>
</div>
