<div class="container">
<h1><%= @user.name %>のページ</h1>
<p>
  <strong>Image:</strong>
  <%= image_tag(@user.image.url,:size => "100x100") %>
</p>
<p>メールアドレス: <%= @user.email %></p>

<% if @favorites_blogs.present? %>
  <% @favorites_blogs.each do |blog| %>
    <div class="col-xs-12 col-md-6 blog-panel">
      <h3><%= blog.user.name %> </h3>
      <h2><%= blog.title %></h2>
      <p><%= blog.content %></p>
    </div>
  <% end %>
<% end %>
</div>
